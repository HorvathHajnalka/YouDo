<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UploadToDoActivity"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/blue_extra_dark"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"

            android:background="@drawable/blue_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainTitle"
                android:text="Add a ToDo"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addToDoName"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter your ToDo..."
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_edittext"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addToDoDesc"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Add your description..."
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/rounded_edittext"/>

        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setTargetMinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/blue_extra_dark"
                android:padding="1dp"
                android:text="+ Set Target Time"
                android:textColor="@color/light_grey"
                android:textSize="18dp"
                app:backgroundTint="@null"
                app:cornerRadius="10dp" />
            <TextView
                android:id="@+id/targetTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Select a date:"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_weight="3"/>

                    <Button
                        android:id="@+id/datePickerBtn"
                        style="?android:spinnerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2024 Jan 1"
                        android:textAlignment="center"
                        android:textColor="@color/light_grey"
                        android:textSize="18sp"
                        android:layout_weight="1"


                        />
            </LinearLayout>
                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Select a type:"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_weight="3"/>

                            <Button
                                android:id="@+id/typePickerBtn"
                                style="?android:spinnerStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="-"
                                android:textAlignment="center"
                                android:textColor="@color/light_grey"
                                android:textSize="18sp"
                                android:layout_weight="1"


                                />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >


        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newtypebtn"
                android:text=" + Add new type   "
                app:backgroundTint="@null"
                android:textSize="18dp"
                android:background="@color/blue_extra_dark"
                android:textColor="@color/light_grey"
                app:cornerRadius="10dp"
                android:padding="1dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deltypebtn"
                android:text=" - Delete from types   "
                app:backgroundTint="@null"
                android:textSize="18dp"
                android:background="@color/blue_extra_dark"
                android:textColor="@color/light_grey"
                app:cornerRadius="10dp"
                android:padding="1dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                />
        </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveTodoBtn"
                android:text="Save"
                android:textSize="20dp"
                android:layout_gravity="center"
                app:backgroundTint="@null"
                android:backgroundTint="@color/white"
                android:textColor="@color/dark_purple"
                android:layout_margin="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
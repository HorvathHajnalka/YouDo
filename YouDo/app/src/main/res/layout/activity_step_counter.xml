<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".StepCounterActivity"
    >

    <TextView
        android:id="@+id/stepCounterTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/background_top"
        android:paddingTop="15dp"
        android:paddingLeft="60dp"
        android:text="Step Counter"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/stepCounterTitle"
        android:paddingTop="15dp"
        android:paddingRight="60dp"
        android:text="date"
        android:layout_centerHorizontal="true"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/layout_id">



        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:max="7500"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_shape"
            android:progressDrawable="@drawable/circular_progress_bar"
            />

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="115dp"
            android:text="steps"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/steps"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Goal: 7500"
            android:textColor="@color/light_grey"
            android:textSize="20dp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/weeklyStatsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:background="@drawable/blue_border"
        android:text="Step History"
        android:textColor="@color/light_grey"
        android:textSize="18dp"
        app:backgroundTint="@null" />



</RelativeLayout>